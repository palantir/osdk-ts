{
  "$schema": "https://turbo.build/schema.json",

  /*
   * OSDK TypeScript Monorepo - Turbo Task Configuration
   *
   * This file defines task orchestration for maximum parallelization across the monorepo.
   *
   * Key Concepts:
   * - Turbo handles task orchestration and caching
   * - monorepolint enforces consistency to keep caching working
   * - Tasks run in parallel when dependencies allow
   *
   * Dependency Prefixes:
   * - `^taskName` - Run this task in all workspace dependencies first
   * - `//#taskName` - Root-level pseudo-task (configuration watchers)
   * - `@package#taskName` - Package-specific task override
   *
   * Build Philosophy:
   * All transpilation runs in parallel, then all type checking runs in parallel.
   * This maximizes parallelization across the entire monorepo.
   */

  "ui": "stream",
  "tasks": {
    // Empty root task - each package defines its own codegen with specific inputs/outputs
    "codegen": {
      "outputLogs": "new-only"
    }, // empty for overriding

    // Non-deterministic task that modifies files
    "fix-lint": {
      "cache": false
    },

    "ci:cspell": {
      "dependsOn": ["//#cspell:all"]
    },

    // Configuration watcher - no cache because it tracks external spell check state
    "//#cspell:all": {
      "cache": false
    },

    "lint": {
      "outputLogs": "new-only",
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        ".eslintrc.cjs",
        "eslint.config.mjs",
        "tsconfig.json"
      ],
      "outputs": [],
      "dependsOn": ["//#global-eslint-config", "//#dprint", "typecheck"]
    },

    // Configuration watcher - tracks dprint.json changes for cache invalidation
    "//#dprint": {
      "outputLogs": "new-only",
      "inputs": ["dprint.json"]
    },

    "check-attw": {
      "outputLogs": "new-only",
      "dependsOn": ["transpile", "typecheck"],
      "inputs": ["build/{esm,cjs,browser,types}", "package.json", "*.d.ts"]
    },

    "check-spelling": {
      "outputLogs": "new-only",
      "inputs": ["**/*.{ts,tsx,cts,mts,md,json,js,mjs,cjs}"]
    },

    // Configuration watcher - tracks babel.config.mjs changes for transpilation cache invalidation
    "//#babel-config": {
      "inputs": ["babel.config.mjs"]
    },

    // Configuration watcher - tracks eslint.config.mjs changes for linting cache invalidation
    "//#global-eslint-config": {
      "inputs": ["eslint.config.mjs"]
    },

    // Cleanup task - no cache because it's meant to remove cached outputs
    "clean": {
      "cache": false
    },

    // Package-specific override: legacy e2e package with unusual dependencies and outputs
    "@osdk/e2e.generated.1.1.x#typecheck": {
      "outputLogs": "new-only",
      "inputs": [
        "bin/**",
        "src/**",
        "src/**/*.{mts,cts,ts,tsx}",
        "tsconfig.json",
        "typecheck.sh",
        "tsconfig.cjs.json",
        "*.d.ts"
      ],
      "outputs": [
        "build/{esm,cjs,browser}/**/*.{ts,cjs,ts.map,cts.map}"
      ],
      "dependsOn": [
        "@osdk/monorepo.tsconfig#typecheck",
        "^typecheck",
        "^transpile",
        "codegen"
      ]
    },

    "typecheck": {
      "dependsOn": [
        "codegen",
        "^transpileTypes"
      ]
    },

    // Package-specific override: fallback package tests need CJS specifically
    "@osdk/tests.verify-fallback-package-v2#typecheck": {
      "dependsOn": ["^transpileCjs"]
    },

    // Virtual task - tracks tsup.mjs config changes
    "@osdk/monorepo.tsup#typecheck": {
      "outputLogs": "new-only",
      "inputs": ["tsup.mjs"]
    },

    "check-api": {
      "outputLogs": "new-only",
      "inputs": ["api-extractor.json", "build/esm/**/*", "api-extractor.json"],
      "outputs": ["etc/*.report.api.md", "build/api-extractor/**/*"],
      "dependsOn": ["transpileTypes", "@osdk/monorepo.api-extractor#check-api"]
    },

    // Doesn't do anything, just a virtual task to depend on the base.json file
    "@osdk/monorepo.api-extractor#check-api": {
      "inputs": ["base.json"]
    },

    "api-docs": {
      "outputLogs": "new-only",
      "inputs": ["temp/**/*"],
      "outputs": ["api-docs/**/*"],
      "dependsOn": ["check-api"]
    },

    "postVersioning": {
    },

    // Package-specific override: version updater automation that modifies other packages
    "@osdk/version-updater#postVersioning": {
      "inputs": [
        "scripts/postVersioning.mjs",
        "../client/package.json",
        "../client/src/Client.ts",
        "../generator/src/v2.0/generateMetadata.ts"
      ],
      "outputs": ["../client/src/Client.ts", "../generator/src/v2.0/generateMetadata.ts"]
    },

    // Virtual task - tracks base TypeScript config changes
    "@osdk/monorepo.tsconfig#typecheck": {
      "outputLogs": "new-only",
      "inputs": ["tsconfig.base.json"]
    },

    // For web applications - builds deployable assets (Vite, Next.js, etc.)
    "build": {
      "dependsOn": ["transpile", "transpileTypes", "typecheck"],
      "inputs": [
        "src/**/*",

        // default input files for vite
        "index.html",
        "vite.config.ts",
        "postcss.config.js",
        "tailwind.config.js",

        // we use this internally to prevent issues with the google fonts request
        // nextjs makes out of the box
        "../../google-font-mocked-response.js"
      ],
      "outputs": [
        // default output dir for vite
        "dist/**",

        // default output dir for nextjs
        "out/**",

        // internally chosen output dir for sanity
        "build/site/**"
      ]
    },

    // Meta task - aggregates bundling tasks
    "bundle": {
      "dependsOn": ["bundle:esbuild"]
    },

    // ESBuild bundling for optimized benchmark builds
    "bundle:esbuild": {
      "outputs": ["build/esbuild/**"],
      "dependsOn": ["transpile", "typecheck"]
    },

    // Performance benchmarking - depends on optimized bundles
    "benchmark": {
      "dependsOn": ["bundle"]
    },

    // Package-specific override: sandbox app with custom build inputs
    "@osdk/e2e.sandbox.todoapp#build": {
      "inputs": ["src/**/*", "vite.config.ts", "index.html"],
      "dependsOn": ["transpile", "typecheck"]
    },

    // Meta task - aggregates all transpilation formats (run in parallel)
    "transpile": {
      "outputLogs": "new-only",
      "dependsOn": [
        "@osdk/monorepo.tsconfig#typecheck",
        "^typecheck",
        "^transpile",
        "codegen",
        "transpileCjs",
        "transpileEsm",
        "transpileBrowser"
      ],
      "inputs": ["bin/**"]
    },

    // TypeScript declarations using oxc-transform
    "transpileTypes": {
      "outputLogs": "new-only",
      "dependsOn": [
        "@osdk/monorepo.tsconfig#typecheck",
        "codegen"
      ],
      "inputs": [
        "bin/**",
        "src/**",
        "templates/**",
        "tsconfig.json"
      ],
      "outputs": [
        "build/types/**"
      ]
    },

    // ES Modules transpilation using Babel (normal mechanism)
    "transpileEsm": {
      "outputLogs": "new-only",
      "dependsOn": [
        "//#babel-config",
        "@osdk/monorepo.tsconfig#typecheck",

        // Because some of these tasks bundle other projects we need to
        // prepare their dependencies first. In the future we can decouple
        // transpile from bundling which should allow us to remove this
        // for everyone but the bundled packages
        "^transpileEsm",
        "codegen"
      ],
      "inputs": [
        "bin/**",
        "src/**",
        "templates/**",
        "tsup.config.js",
        "tsconfig.json"
      ],
      "outputs": [
        "build/esm/**"
      ]
    },

    // Browser-optimized transpilation using tsup
    "transpileBrowser": {
      "outputLogs": "new-only",
      "dependsOn": [
        "//#babel-config",
        "@osdk/monorepo.tsconfig#typecheck",
        "^transpileBrowser",
        "codegen"
      ],
      "inputs": [
        "bin/**",
        "src/**",
        "templates/**",
        "tsconfig.json"
      ],
      "outputs": [
        "build/browser/**"
      ]
    },

    // CommonJS transpilation using tsup (bundle mechanism)
    // CJS is special: needs BOTH ^transpileCjs AND ^transpileTypes because
    // tsup generates different .d.ts files for CJS vs ESM, and CJS resolution needs both
    "transpileCjs": {
      "outputLogs": "new-only",
      "dependsOn": [
        "//#babel-config",
        "@osdk/monorepo.tsconfig#typecheck",
        "^transpileCjs",

        // tsup may be trying to resolve the module types and not the cjs types
        "^transpileTypes",
        "codegen"
      ],
      "inputs": [
        "bin/**",
        "src/**",
        "templates/**",
        "tsup.config.js",
        "tsconfig.json"
      ],
      "outputs": [
        "build/cjs/**"
      ]
    },

    "test": {
      "outputLogs": "new-only",
      "env": ["FORCE_COLOR"],
      "dependsOn": ["^transpile"]
    },

    // Configuration watcher - tracks monorepolint config and package.json files
    "//#check-mrl": {
      "inputs": [
        "package.json",
        ".monorepolint.config.mjs",
        "packages/*/package.json",
        "packages/*/tsconfig.json",
        "packages/*/src/public/*",
        "examples/*/*/package.json",
        "examples/*/*/tsconfig.json",
        "examples-extra/*/*/package.json",
        "examples-extra/*/*/tsconfig.json",
        "templates/*"
      ]
    },

    // Full CI suite - runs all quality checks and builds
    "check": {
      "dependsOn": [
        "//#check-mrl",
        "lint",
        "transpile",
        "typecheck",
        "test",
        "check-attw",
        "check-api",
        "check-spelling"
      ]
    }
  },

  "globalDependencies": ["config/tsconfig.base.json"]
}
