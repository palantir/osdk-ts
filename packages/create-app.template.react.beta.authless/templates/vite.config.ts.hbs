import react from "@vitejs/plugin-react";
import { defineConfig } from "vite";

// https://vitejs.dev/config/
export default defineConfig(({ mode }) => {
  return {
    plugins: [react()],
    server: {
      port: 8080,
      {{#if isAuthless}}
      proxy: {
        "^/.*api-proxy.*": {
          target: "{{foundryUrl}}",
          changeOrigin: true,
          secure: true,
          rewrite: (path) => {
            const match = path.match(/\/api-proxy(.*)$/);
            if (match) {
              return `/proxy${match[1]}`;
            }
            return path;
          },
        },
      },
      {{else}}
      {{#if corsProxy}}
      proxy: {
        "^(/multipass/api|/api)": {
          target: "{{foundryUrl}}",
          changeOrigin: true,
          secure: true,
        },
      },
      {{/if}}
      {{/if}}
    },
    define: {
      "process.env.NODE_ENV": JSON.stringify(mode),
    },
  };
});
