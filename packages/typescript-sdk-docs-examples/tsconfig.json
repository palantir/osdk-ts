{
  "extends": "@osdk/monorepo.tsconfig/base.json",
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "composite": true,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "moduleResolution": "bundler"
  },
  "include": ["./src/**/*", "./src/generatedNoCheck/**/*", "utils"],
  "exclude": ["node_modules", "dist" ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ESNext"
    }
  }
}
